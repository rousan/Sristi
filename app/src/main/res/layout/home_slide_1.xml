<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:alpha="0.0"
        android:id="@+id/home_image_slider_imageview"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/home_slider_descrption_mask"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#000"
        android:alpha="0.0"
        android:layout_width="160dp"
        android:layout_height="57dp"/>

    <LinearLayout
        android:alpha="0.0"
        android:id="@+id/home_slider_descrption_panel"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/home_slider_descrption_title"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            android:text="Sristi Union"
            android:textSize="@dimen/HEADINGS_FONT_SIZE"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/home_slider_descrption_text"
            android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
            android:text="Sristi is the largest techfest in North"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>